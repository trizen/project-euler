# Runtime: 0.028s

func count(n, k) {
    var lcm    = Math.lcm((1..n)...)
    var period = Math.lcm(lcm, n + 1)/lcm
    var count  = floor((k - 2) / lcm)
    count - floor(count / period)
}

say sum(1..31, {|k| count(k, 4**k) })
