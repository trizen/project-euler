# Find the value of d < 1000 for which 1/d contains the longest recurring cycle in its decimal fraction part.

# https://projecteuler.net/problem=26

# Runtime: 4.211s

func rec_cycle(d) {
    for x in (1..d) {
        if (powmod(10, x, d) == 1) {
            return x;
        }
    }
    return 0;
}

var d = 1;
var max = 0;

for i in (2..1000) {
    var r = rec_cycle(i);

    if (r > max) {
        max = r;
        d = i;
    }
}

say d;
