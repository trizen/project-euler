# https://projecteuler.net/problem=130

# Runtime: 2 min, 11 sec

var sum   = 0
var count = 0

for n in (2..Inf -> lazy.grep { !.is_prime && .is_coprime(10) }) {

    var r = 1
    var p = 0

    for k in (1 ..^ n) {
        r += powmod(10, k, n)
        r %= n
        p += 1
        r == 1 && break
    }

    if ((r == 1) && p.divides(n-1)) {
        sum += n
        say "[#{count+1}] #{n}"
        ++count == 25 && break
    }
}

say sum
