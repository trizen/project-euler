# Runtime: 19.709s (previously: 36.014s)

var n = 1e6
var m = 1000000007

say sum(1..n, {|k|
    with (mulmod(k, k, m) - 1) {|p|
        divmod(p * ((-1)**n * powmod(p, n, m) - 1), p+1, m)
    }
})%m
