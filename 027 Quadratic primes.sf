# https://projecteuler.net/problem=27

# Runtime: 1.749s

var limit = 1000

var m = 0
var p = 0
var q = 0

var primes = limit.primes

for a,b in (primes ~X primes) {

    with (^Inf -> first_by {|k| !is_prime(k*k + a*k + b) }) { |n|
        if (n > m) {
            (m, p, q) = (n, a, b)
        }
    }

    with (^Inf -> first_by {|k| !is_prime(k*k - a*k + b) }) { |n|
        if (n > m) {
            (m, p, q) = (n, -a, b)
        }
    }
}

say "n^2 + #{p}*n + #{q} for 0 <= n < #{m}"
say "#{p} * #{q} = #{p * q}"
